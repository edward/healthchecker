<% colour_chunks(opinion.handle).each do |colour| %>
  <svg width="20" height="10" style="padding: 0">
    <rect width="20" height="10" style="fill:rgb(<%= "#{colour[:red]}, #{colour[:green]}, #{colour[:blue]}" %>);stroke-width:3;stroke:rgb(0,0,0)" />
  </svg>
<% end %>

